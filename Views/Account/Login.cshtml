@using CoffeeApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Выполнить вход";
}
<main class="container-fluid">
    <div class="row justify-content-center pt-20 pb-20">
        <div class="col-8 col-sm-8 col-md-4 col-lg-4 col-xl-4 col-xxl-4">

            <h2>@ViewBag.Title.</h2>
            <div class="row">
                <div class="col">
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4>Используйте для входа локальную учетную запись.</h4>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "col control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "col control-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                            
                        <div class="container-fluid">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                            <input type="submit" value="Выполнить вход" class="btn btn-default" />
                    </div>
                            <p>
                                @Html.ActionLink("Регистрация нового пользователя", "Register")
                            </p>
                            @* Включите, когда будет включено подтверждение учетной записи для функции сброса пароля
                                <p>
                                    @Html.ActionLink("Забыли пароль?", "ForgotPassword")
                                </p>*@
                        }
                    </section>
                </div>
             

            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
