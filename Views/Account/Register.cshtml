@model CoffeeApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}



<main class="container-fluid">
    <div class="row justify-content-center pt-20 pb-20">
        <div class="col-8 col-sm-8 col-md-4 col-lg-4 col-xl-4 col-xxl-4">



            <h2>@ViewBag.Title.</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Создание новой учетной записи.</h4>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                
                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "col control-label" })
                    
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    
                </div>
                
                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "col control-label" })
                    
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    
                </div>
                
                <div class="mb-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col control-label" })
                    
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    
                </div>
                
                <div class="mb-3">
                    
                        <input type="submit" class="btn btn-default" value="Регистрация" />
                    
                </div>
            }

        </div>
    </div>
    </main>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
